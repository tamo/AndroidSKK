<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyWidth="10%p"
    app:horizontalGap="0dip"
    app:verticalGap="0dip"
	app:keyHeight="8%p"
    >

    <Row>
        <Key app:keyLabel="q" app:shiftedLabel="Q" app:keyEdgeFlags="left"/>
        <Key app:keyLabel="w" app:shiftedLabel="W"/>
        <Key app:keyLabel="e" app:shiftedLabel="E"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="èéêë" />
        <Key app:keyLabel="r" app:shiftedLabel="R"/>
        <Key app:keyLabel="t" app:shiftedLabel="T"/>
        <Key app:keyLabel="y" app:shiftedLabel="Y"/>
        <Key app:keyLabel="u" app:shiftedLabel="U"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="ùúûü" />
        <Key app:keyLabel="i" app:shiftedLabel="I"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="ìíîï" />
        <Key app:keyLabel="o" app:shiftedLabel="O"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="òóôõöø" />
        <Key app:keyLabel="p" app:shiftedLabel="P" app:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key app:keyLabel="a" app:shiftedLabel="A" app:horizontalGap="5%p"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="àáâãäåæ" app:keyEdgeFlags="left"/>
        <Key app:keyLabel="s" app:shiftedLabel="S"/>
        <Key app:keyLabel="d" app:shiftedLabel="D"/>
        <Key app:keyLabel="f" app:shiftedLabel="F"/>
        <Key app:keyLabel="g" app:shiftedLabel="G"/>
        <Key app:keyLabel="h" app:shiftedLabel="H"/>
        <Key app:keyLabel="j" app:shiftedLabel="J"/>
        <Key app:keyLabel="k" app:shiftedLabel="K"/>
        <Key app:keyLabel="l" app:shiftedLabel="L" app:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key app:codes="-1,-7" app:keyIcon="@drawable/ic_keyboard_shift"
                app:keyWidth="15%p" app:isModifier="true"
                app:keyEdgeFlags="left"/>
        <Key app:keyLabel="z" app:shiftedLabel="Z"/>
        <Key app:keyLabel="x" app:shiftedLabel="X"/>
        <Key app:keyLabel="c" app:shiftedLabel="C"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="çćĉċč" />
        <Key app:keyLabel="v" app:shiftedLabel="V"/>
        <Key app:keyLabel="b" app:shiftedLabel="B"/>
        <Key app:keyLabel="n" app:shiftedLabel="N"
			app:popupKeyboard="@xml/keys_popup" app:popupCharacters="ñ" />
        <Key app:keyLabel="m" app:shiftedLabel="M"/>
        <Key app:codes="-5" app:keyIcon="@drawable/ic_keyboard_backspace"
                app:keyWidth="15%p" app:keyEdgeFlags="right"
                app:isRepeatable="true"/>
    </Row>

    <Row app:rowEdgeFlags="bottom">
        <Key app:codes="-1008" app:keyLabel="JP"
                app:keyWidth="20%p" app:keyEdgeFlags="left"/>
        <Key app:codes="-1009" app:keyLabel="123" app:keyWidth="15%p"/>
        <Key app:codes="32" app:keyIcon="@drawable/ic_keyboard_spacebar"
                app:keyWidth="30%p" app:isRepeatable="true"/>
        <Key app:keyLabel="." app:shiftedLabel=","
                app:keyWidth="15%p"/>
        <Key app:codes="-1011" app:keyIcon="@drawable/ic_keyboard_return"
                app:keyWidth="20%p" app:keyEdgeFlags="right"/>
    </Row>
</Keyboard>
